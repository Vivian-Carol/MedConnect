<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:padding="16dp">

        <!-- Image on the left side -->
        <ImageView
            android:id="@+id/pharmacy_image"
            android:layout_width="163dp"
            android:layout_height="189dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_pharmacy_placeholder" />

        <!-- Texts on the right side -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="220dp"
            android:layout_height="194dp"
            android:layout_alignTop="@id/pharmacy_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@id/pharmacy_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pharmacy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pharmacy Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pharmacy_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Pharmacy Address" />

            <TextView
                android:id="@+id/pharmacy_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Phone Number" />

            <TextView
                android:id="@+id/town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Town" />

            <TextView
                android:id="@+id/medication_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Medication Name" />

            <TextView
                android:id="@+id/milligrams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Milligrams" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Price" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
